{
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ],
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "removeComments": true,
        "declaration": true,
        "outDir": "dist",
        "baseUrl": ".",
    }
}